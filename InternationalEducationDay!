import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner ip=new Scanner(System.in);
		int a=ip.nextInt();
		int b=ip.nextInt();
		int c=ip.nextInt();
		int x=a*c;
		int y=b*c;
        if(x>y){
            System.out.println(x);
        }
        else{
            System.out.println(y);
        }
	}
}
