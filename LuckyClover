import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner ip = new Scanner(System.in);
        int N = ip.nextInt();
        int totalLeaves = 4 + 3 * (N - 1);
        System.out.println(totalLeaves);

	}
}
